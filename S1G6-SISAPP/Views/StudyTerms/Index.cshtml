@model IEnumerable<S1G6_SISAPP.Models.StudyTerm>

@{
    ViewBag.Title = "Study Terms";
}

<h2>Study Terms</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>

@using (Html.BeginForm("Index", "StudyTerms", FormMethod.Get))
{
    <p>
        Find by name : @Html.TextBox("SearchString")
        <input type="submit" value="Search" />
        | @Html.ActionLink("Back to List", "Index")

    </p>
}

<table class="table">
    <tr>
        <th>
            @Html.ActionLink("TermName", "Index", new { sortBy = ViewBag.SortName })

        </th>
        <th>
            @Html.DisplayNameFor(model => model.TermStartDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TermEndDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TermYear)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TermSeason)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.TermName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TermStartDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TermEndDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TermYear)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TermSeason)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.TermID }) |
                @Html.ActionLink("Details", "Details", new { id = item.TermID }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.TermID })
            </td>
        </tr>
    }

</table>
